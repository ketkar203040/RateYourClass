<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/class_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            card_view:cardElevation="4dp"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="3dp"
            tools:style="@style/CardView">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/class_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Upcoming Class"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/schedule_classname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/class_head"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/black"
                    tools:text="Operating Systems"/>

                <TextView
                    android:id="@+id/schedule_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_below="@id/schedule_classname"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:drawablePadding="10dp"
                    android:drawableEnd="@android:drawable/ic_lock_idle_alarm"
                    tools:text="8:30"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/rating_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            card_view:cardElevation="4dp"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="3dp"
            tools:style="@style/CardView"
            card_view:cardBackgroundColor="@color/colorAccent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ratings"
                android:textColor="@color/white"
                android:textSize="25sp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/user_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            card_view:cardElevation="4dp"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="3dp"
            tools:style="@style/CardView"
            card_view:cardBackgroundColor="#6A7E87">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="User Info"
                android:textColor="@color/white"
                android:textSize="25sp"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>